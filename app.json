{
  "expo": {
    "name": "True Compass",
    "slug": "true-compass",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/compass.png",
    "scheme": "truecompass",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "A precise, ad-free compass app using your device's magnetometer. Features tilt compensation, calibration guidance, and both light and dark modes.",
    "primaryColor": "#007AFF",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.truecompass.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses the magnetometer and accelerometer to provide accurate compass readings with tilt compensation.",
        "UIRequiresFullScreen": false
      }
    },
    "android": {
      "package": "com.truecompass.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#007AFF",
        "foregroundImage": "./assets/images/compass.png"
      },
      "permissions": [
        "android.permission.VIBRATE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/compass.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/compass.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
